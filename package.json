{
    "name": "your-project-name",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "browser": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "lint": "eslint src test --quiet --fix --ignore-path .gitignore",
        "test": "cross-env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha -r ts-node/register test/**/*.spec.ts",
        "build": "npm run clean && rollup -c",
        "lint-test-build": "npm run lint && npm run test && npm run build",
        "coverage": "rimraf coverage && nyc npm run test",
        "typedoc": "typedoc --out docs src/index.ts",
        "watch": "rollup -cw",
        "clean": "rimraf dist coverage",
        "clean-dist": "rimraf dist",
        "clean-coverage": "rimraf coverage"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/sinon": "^10.0.6",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "chai": "^4.3.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.0.2",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.60.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "sinon": "^12.0.1",
        "source-map-support": "^0.5.20",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.9",
        "typescript": "^4.4.4"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts",
            "dist",
            "coverage",
            "test/**/*.ts"
        ],
        "reporter": [
            "html",
            "text"
        ],
        "all": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{src,test}/**/*.{js,ts,tsx}": [
            "npm run lint",
            "git add"
        ]
    }
}